{
  "name": "temme-vscode-extension",
  "private": true,
  "license": "MIT",
  "displayName": "Temme",
  "description": "Temme selector syntax support for VS Code.",
  "version": "0.7.0-SNAPSHOT",
  "publisher": "shinima",
  "repository": {
    "type": "git",
    "url": "https://github.com/shinima/temme-vscode-extension.git"
  },
  "main": "./out/index.js",
  "scripts": {
    "grammar:start":
      "supervisor --no-restart-on exit --watch temme.tmLanguage.yaml -e yaml -- compile.js",
    "grammar:build": "node compile.js",
    "start": "webpack --watch --mode=development",
    "build": "webpack --mode=production"
  },
  "engines": {
    "vscode": "^1.22.0"
  },
  "categories": ["Languages"],
  "activationEvents": [
    "onLanguage:temme",
    "onCommand:temme.runSelector",
    "onCommand:temme.startWatch",
    "onCommand:temme.stop"
  ],
  "contributes": {
    "languages": [
      {
        "id": "temme",
        "aliases": ["temme", "temme"],
        "extensions": [".temme"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "temme",
        "scopeName": "source.temme",
        "path": "./out/temme.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "temme.runSelector",
        "category": "Temme",
        "title": "Run temme selector"
      },
      {
        "command": "temme.startWatch",
        "category": "Temme",
        "title": "Start watch"
      },
      {
        "command": "temme.stop",
        "category": "Temme",
        "title": "Stop running/watching"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^9.6.5",
    "js-yaml": "^3.11.0",
    "mkdirp": "^0.5.1",
    "prettier": "^1.12.1",
    "supervisor": "^0.12.0",
    "ts-loader": "^4.2.0",
    "typescript": "^2.8.1",
    "vscode": "^1.1.14",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3"
  },
  "dependencies": {
    "@types/node-fetch": "^1.6.8",
    "node-fetch": "^2.1.2",
    "temme": "^0.6.1"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
